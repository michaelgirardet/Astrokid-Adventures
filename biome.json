{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",

	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentWidth": 4,
		"indentStyle": "space"
	},

	"linter": {
		"enabled": true,
		"rules": {
			"correctness": "error",
			"performance": "warn",
			"style": "warn"
		}
	},

	"organizeImports": {
		"enabled": true
	}
}
